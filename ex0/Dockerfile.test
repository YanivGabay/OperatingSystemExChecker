# Dockerfile.test
FROM rockylinux/rockylinux:8

# Install Software Collections (SCL) to access devtoolset-8
RUN dnf install -y centos-release-scl && \
    dnf install -y devtoolset-8 && \
    dnf clean all

# Create symbolic links for gcc and g++ to access specific versions
RUN ln -s /opt/rh/devtoolset-8/root/usr/bin/gcc /usr/local/bin/gcc-8.5.0 && \
    ln -s /opt/rh/devtoolset-8/root/usr/bin/g++ /usr/local/bin/g++-8.5.0

# Verify GCC version
RUN gcc --version
